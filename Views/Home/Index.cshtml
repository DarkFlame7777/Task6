@{
    ViewData["Title"] = "The Tic Tac Toe game";
}

<div class="container-fluid dark-theme">
    <div class="row min-vh-100">
        <div class="col-md-3 sidebar p-4">
            <div class="text-center mb-5">
                <h1 class="logo-text">Tic Tac <span class="red-text">Toe</span></h1>
                <p class="text-muted">Multiplayer Gaming Platform</p>
            </div>

            <div id="playerInfo" class="d-none">
                <div class="card dark-card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">Welcome, <span id="playerNameDisplay" class="red-text"></span></h5>
                        <div id="playerStats" class="mt-3">
                            <div class="row text-center">
                                <div class="col-4">
                                    <div class="stat-number wins">0</div>
                                    <div class="stat-label">Wins</div>
                                </div>
                                <div class="col-4">
                                    <div class="stat-number losses">0</div>
                                    <div class="stat-label">Losses</div>
                                </div>
                                <div class="col-4">
                                    <div class="stat-number draws">0</div>
                                    <div class="stat-label">Draws</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div id="nameEntry" class="card dark-card">
                <div class="card-body">
                    <h5 class="card-title">Enter Your Name</h5>
                    <div class="mb-3">
                        <input type="text" class="form-control dark-input" id="playerName"
                               placeholder="Your name" maxlength="20">
                    </div>
                    <button class="btn btn-danger w-100" onclick="registerPlayer()">Start Playing</button>
                </div>
            </div>

            <div id="gameControls" class="d-none">
                <div class="card dark-card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Create New Game</h5>
                        <div class="mb-3">
                            <input type="text" class="form-control dark-input" id="sessionName"
                                   placeholder="Game session name" maxlength="30">
                        </div>
                        <button class="btn btn-outline-red w-100" onclick="createGameSession()">
                            Create game
                        </button>
                    </div>
                </div>

                <div class="card dark-card">
                    <div class="card-body">
                        <h5 class="card-title">Available Games</h5>
                        <div id="availableSessions" class="list-group"></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-9 main-content p-4">
            <div class="text-center mb-5">
                <h2 id="gameStatus">Waiting for game...</h2>
                <div id="currentTurn" class="d-none"></div>
            </div>

            <div id="gameArea" class="d-none">
                <div class="game-container">
                    <div id="gameBoard" class="tic-tac-toe-board"></div>
                </div>
                <div id="gameResult" class="d-none text-center mt-4">
                    <h3 id="resultMessage"></h3>
                    <button class="btn btn-danger mt-3" onclick="leaveGame()">Leave Game</button>
                </div>
            </div>

            <div id="waitingArea" class="text-center">
                <div class="waiting-icon">
                    <i class="fas fa-gamepad fa-4x mb-3 red-text"></i>
                    <p>Create a game or join an existing one to start playing!</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/game.js"></script>
}